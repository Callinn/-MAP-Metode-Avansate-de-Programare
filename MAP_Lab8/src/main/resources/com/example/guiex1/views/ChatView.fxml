<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.guiex1.controller.ChatController">
    <children>
        <!-- ListView for displaying messages -->
        <ListView fx:id="listViewMessages" layoutX="10.0" layoutY="10.0" prefHeight="300.0" prefWidth="360.0"/>

        <!-- TextField for typing new messages -->
        <TextField fx:id="textFieldMessage" layoutX="10.0" layoutY="320.0" prefHeight="40.0" prefWidth="260.0"/>

        <!-- Button for sending messages -->
        <Button fx:id="buttonSend" layoutX="280.0" layoutY="320.0" mnemonicParsing="false" text="Send" />
    </children>
</AnchorPane>
